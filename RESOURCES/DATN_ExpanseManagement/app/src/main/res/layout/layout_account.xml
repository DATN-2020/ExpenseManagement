<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tbAccount"
        layout="@layout/toolbar_account" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlAccount"
        style="@style/StyleTextView.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_219dfd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbAccount"
        app:tabIndicatorColor="@color/white"
        app:tabInlineLabel="true"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/MyCustomTextAppearance"
        app:tabTextColor="@color/color_ebebeb" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpAccount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tlAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/spacing_20dp"
    android:paddingBottom="@dimen/spacing_10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/spacing_20dp"
        android:paddingEnd="@dimen/spacing_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleTotalMoney"
            android:fontFamily="@font/roboto_medium"
            style="@style/StyleTextView.Normal.Black"
            android:text="@string/text_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/StyleTextView.Normal.219DFD"
            android:id="@+id/tvChooseExample"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/text_choose_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glVertical"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/StyleTextView.Huge.E94C4C"
            android:id="@+id/edtMoney"
            app:layout_constraintEnd_toStartOf="@id/glVertical"
            app:layout_constraintTop_toBottomOf="@id/tvTitleTotalMoney"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textEnd"
            android:textColorHint="@color/color_e94c4c"
            android:hint="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpanse"
            style="@style/StyleTextView.Medium.Black"
            android:fontFamily="@font/roboto_bold"
            android:text="Ä‘"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/edtMoney"
            app:layout_constraintStart_toEndOf="@id/glVertical"
            app:layout_constraintBottom_toBottomOf="@id/edtMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_marginTop="@dimen/spacing_10dp"
        android:background="@color/color_e4e4e4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
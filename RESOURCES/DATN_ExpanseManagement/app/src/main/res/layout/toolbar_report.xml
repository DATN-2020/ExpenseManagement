<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_219dfd"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_report"
        style="@style/StyleTextView.Huge.White"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/spacing_20dp"/>
    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_6dp"
        android:id="@+id/imgChooseDate"
        android:layout_marginEnd="@dimen/spacing_20dp"
        android:layout_width="@dimen/spacing_40dp"
        android:layout_height="@dimen/spacing_40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_date_range_white_24"/>

    <ImageView
        android:layout_marginStart="@dimen/spacing_20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_6dp"
        android:id="@+id/imgChooseWallet"
        android:layout_marginEnd="@dimen/spacing_20dp"
        android:layout_width="@dimen/spacing_40dp"
        android:layout_height="@dimen/spacing_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_branding_watermark_24"/>

    <TextView
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/tvToolbar"
        app:layout_constraintTop_toTopOf="@id/imgChooseWallet"
        app:layout_constraintStart_toEndOf="@id/imgChooseWallet"
        style="@style/StyleTextView.Normal.White"
        android:fontFamily="@font/roboto_medium"
        android:text="Ví tiền mặt"
        android:id="@+id/tvWalletName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/imgChooseWallet"
        app:layout_constraintEnd_toStartOf="@id/tvToolbar"
        app:layout_constraintStart_toEndOf="@id/imgChooseWallet"
        style="@style/StyleTextView.Normal.White"
        android:fontFamily="@font/roboto_medium"
        android:text="5.000.000"
        android:id="@+id/tvPriceWallet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="end"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/imgChooseDate"
        app:layout_constraintEnd_toStartOf="@id/imgChooseDate"
        app:layout_constraintTop_toTopOf="@id/imgChooseDate"
        app:layout_constraintStart_toEndOf="@id/tvToolbar"
        style="@style/StyleTextView.Normal.White"
        android:fontFamily="@font/roboto_medium"
        android:text="6/2020"
        android:id="@+id/tvMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
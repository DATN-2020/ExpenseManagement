<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_10dp"
    android:paddingBottom="@dimen/spacing_10dp"
    android:paddingStart="@dimen/spacing_20dp"
    android:paddingEnd="@dimen/spacing_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBank"
        app:srcCompat="@drawable/ic_account_balance_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/tvInterest"
        app:layout_constraintTop_toTopOf="@id/tvNameBank"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/spacing_24dp"
        android:layout_height="@dimen/spacing_24dp"/>

    <TextView
        style="@style/StyleTextView.Medium.Black"
        android:fontFamily="@font/roboto_medium"
        android:text="SACOMBANK"
        android:paddingEnd="@dimen/spacing_20dp"
        android:paddingStart="@dimen/spacing_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBank"
        android:id="@+id/tvNameBank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_6dp"
        style="@style/StyleTextView.Normal.Black"
        android:fontFamily="@font/roboto_medium"
        android:text="Lãi suất 0.6 % / năm"
        android:paddingEnd="@dimen/spacing_20dp"
        android:paddingStart="@dimen/spacing_20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameBank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBank"
        android:id="@+id/tvInterest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/color_f5f5f5"
        android:layout_marginTop="@dimen/spacing_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvInterest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
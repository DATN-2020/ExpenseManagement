<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingStart="@dimen/spacing_20dp"
    android:paddingTop="@dimen/spacing_10dp"
    android:paddingEnd="@dimen/spacing_20dp">

    <TextView
        android:id="@+id/tvBeginBalance"
        style="@style/StyleTextView.Normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Mục tiêu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrice"
        style="@style/StyleTextView.Medium.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:fontFamily="@font/roboto_medium"
        tools:text="3.0000.000.000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBeginBalance" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/StyleTextView.Normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Ngày bắt đầu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />

    <TextView
        android:id="@+id/tvValueDate"
        style="@style/StyleTextView.Medium.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:fontFamily="@font/roboto_medium"
        tools:text="10/07/2020"
        app:layout_constraintEnd_toStartOf="@id/tvDayLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

    <TextView
        android:id="@+id/tvDayLeft"
        style="@style/StyleTextView.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        tools:text="Còn lại 700 ngày"
        app:layout_constraintBottom_toBottomOf="@id/tvValueDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvValueDate"
        app:layout_constraintTop_toTopOf="@id/tvValueDate" />

    <View
        android:id="@+id/viewBottom"
        android:layout_marginTop="@dimen/spacing_10dp"
        app:layout_constraintTop_toBottomOf="@id/tvValueDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/color_f5f5f5"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>